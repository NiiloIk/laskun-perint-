<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projektityö"
        xmlns:Luokat="clr-namespace:projektityö.Luokat" x:Class="projektityö.Window2"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" >
                <MenuItem Header="_Kotisivu" Click="MenuItem_Click"/>
                <MenuItem Header="_Uusi Lasku" Click="MenuItem_Click_2" />
                <MenuItem Header="E_xit" Command="ApplicationCommands.Close"/>
               
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="listBox" Grid.ColumnSpan="3" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,623,0" SelectionChanged="listBox_SelectionChanged" DisplayMemberPath="Vastaanottaja.Etunimi"/>
            <TextBox x:Name="nameBox" HorizontalAlignment="Left" Margin="266,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Height="42" Grid.Column="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="266,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" Height="16" Width="32"><Run Language="fi-fi" Text="Name"/></TextBlock>
            <TextBox x:Name="adressBox" HorizontalAlignment="Left" Margin="266,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Height="42" Grid.Column="2"/>
            <TextBox x:Name="amountBox" HorizontalAlignment="Left" Margin="266,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Height="42" Grid.Column="2"/>
            <TextBlock HorizontalAlignment="Left" Margin="266,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" Height="16" Width="43"><Run Language="fi-fi" Text="Lasku"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="266,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" Height="16" Width="43"><Run Language="fi-fi" Text="Address"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="266,337,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" Height="16" Width="43"><Run Language="fi-fi" Text="Lisät"/></TextBlock>
            <TextBox x:Name="lisäBox" HorizontalAlignment="Left" Margin="266,353,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" Height="42" Grid.Column="2"/>
        </Grid>
    </DockPanel>
</Window>
