<Window x:Class="projektityö.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projektityö"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Menu">
                <MenuItem Header="_VanhatLaskut" Click="MenuItem_Click_1"/>
                <MenuItem Header="_Kotisivu" Click="MenuItem_Click"/>
                <MenuItem Header="E_xit" Command="ApplicationCommands.Close"/>
            </MenuItem>
        </Menu>
        <Grid>
            <TextBlock HorizontalAlignment="Left" Margin="21,10,0,0" TextWrapping="Wrap" Text="Luo uusi lasku" VerticalAlignment="Top" Height="27" Width="140" FontSize="20"/>
            <TextBox x:Name="hkTiedot" HorizontalAlignment="Left" Margin="21,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="34" FontSize="16" Text="-" TextChanged="hkTiedot_TextChanged"/>
            <TextBlock HorizontalAlignment="Left" Margin="21,70,0,0" TextWrapping="Wrap" Text="Etu- ja Sukunimi" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="21,130,0,0" TextWrapping="Wrap" Text="Laskun Suuruus" VerticalAlignment="Top"/>
            <TextBox x:Name="laskunSuuruus" HorizontalAlignment="Left" Margin="21,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="31" Text="-"/>
            <TextBlock HorizontalAlignment="Left" Margin="21,192,0,0" TextWrapping="Wrap" Text="Päivämäärä" VerticalAlignment="Top"/>
            <TextBox x:Name="päivämäärä" HorizontalAlignment="Left" Margin="21,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="30" Text="-"/>
            <Button x:Name="tallennaBtn" Content="Button" HorizontalAlignment="Left" Margin="51,270,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.485,0.659" Height="37" Width="92" FontSize="22" Click="tallennaBtn_Click"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="191,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="51" Width="162"/>
        </Grid>
    </DockPanel>
</Window>
